# 生產環境配置範例
# 請修改為實際的生產環境值

# Flask 配置
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_A_REAL_SECRET_KEY_IN_PRODUCTION_min_32_chars

# 服務器配置
PORT=8080
HOST=0.0.0.0

# 快取配置
CACHE_DURATION=600
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=600
# REDIS_URL=redis://localhost:6379/0

# CORS 配置（生產環境 - 指定具體域名）
CORS_ENABLED=True
CORS_ORIGINS=https://burnsky.example.com,https://www.burnsky.example.com  # 替換為實際域名

# 速率限制配置（生產環境更嚴格）
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour, 20 per minute
RATE_LIMIT_PREDICT=50 per hour
RATE_LIMIT_ML=10 per hour
RATE_LIMIT_STORAGE=redis://localhost:6379

# 文件上傳配置
UPLOAD_FOLDER=/var/www/uploads
MAX_FILE_SIZE=16777216
AUTO_SAVE_PHOTOS=True
PHOTO_RETENTION_DAYS=90

# 數據庫配置
PREDICTION_HISTORY_DB=/var/www/data/prediction_history.db
HOURLY_SAVE_ENABLED=True

# 日誌配置
LOG_LEVEL=WARNING
LOG_FILE=/var/log/burnsky/app.log
LOG_MAX_BYTES=52428800
LOG_BACKUP_COUNT=10

# Google 服務配置
GOOGLE_ANALYTICS_ID=G-4KLPHLD5EQ
